{{#extend "layoutPartial"}}
{{#section 'head'}}
<link rel="stylesheet" href="assets/css/bootstrap-datetimepicker.min.css">
<link rel="stylesheet" href="assets/plugins/sky-forms-pro/skyforms/css/sky-forms.css">
<link rel="stylesheet" href="assets/plugins/sky-forms-pro/skyforms/custom/custom-sky-forms.css">
<!--[if lt IE 9]><link rel="stylesheet" href="assets/plugins/sky-forms-pro/skyforms/css/sky-forms-ie8.css"><![endif]-->
{{#content "loggedIn"}}
{{#if name}}
	{{name}} 
{{else}}
	<li><a href="/login">Login</a></li>
{{/if}}
{{/content}}
{{/section}}
{{#content "mainbody"}}
<div class="container content">
	<div class="row">
		<div class="col-lg-12">
			<form method="post" id="searchform" class="sky-form">
				<header>Search venues</header>
				<fieldset>
					<div class="row">
						<section class="col col-6">
						<label class="label">Where(Zip or City, State)</label>
						<label class="input">
							<i class="icon-append fa fa-location-arrow"></i>
							<input type="text" name="where" id="where" value={{where}}>
						</label>
						</section>
						<section class="col col-4">
						<label class="label">When do you need it?</label>
						<div id="datetimepicker2" class="input-group"> 
							<input name="whenstart" class="form-control" data-format="MM/dd/yyyy HH:mm:ss PP" type="text" value={{whenstart}}></input>	
							<span class="add-on input-group-btn">
								<button class="btn btn-u" type="button">
								<i data-time-icon="fa fa-clock-o" data-date-icon="fa fa-calendar"> </i>
								</button>
							</span>
						</div>
						<!-- <label class="input">
							<i class="icon-append fa fa-calendar"></i>
							<input type="text" name="start" id="start" placeholder="Date">
						</label> -->
						</section>
						<section class="col col-2">
						<label class="label">For how long(in Hours)?</label>
						<label class="input">
							<input type="text" name="duration" id="duration" value={{duration}}>
						</label>
						</section>
					</div>
					<div class="row">
						<section class="col col-12">
						<label class="label">Ameneties required</label>
						<div class="inline-group">
							<label class="checkbox"><input type="checkbox" name="coffee" checked><i></i>Coffee</label>
							<label class="checkbox"><input type="checkbox" name="allergyfree"><i></i>Allergy-free</label>
							<label class="checkbox"><input type="checkbox" name="wifi"><i></i>WiFi</label>
							<label class="checkbox"><input type="checkbox" name="bathroom"><i></i>Bathroom</label>
						</div>
						</section>
					</div>
				</fieldset>
				<footer>
				<button type="submit" class="button">Submit</button>
				</footer>

			</form>         
		</div>  
	</div>  
	<div class="row">
		<div class="col-md-12">
			<div class="filter-results">
				{{> search_results}}
			</div>  
		</div>  
	</div>  
</div>  
{{/content}}
{{#content "scripts" mode="append"}}
<script src="assets/plugins/sky-forms-pro/skyforms/js/jquery-ui.min.js"></script>
<script type="text/javascript" src="assets/js/plugins/form-sliders.js"></script>
<script src="assets/js/bootstrap-datetimepicker.min.js"></script>
<script>
	jQuery(document).ready(function() {
		$('#datetimepicker2').datetimepicker({
			language: 'en',
			pick12HourFormat: true
		});
		FormSliders.initFormSliders();
	});
</script>
{{/content}}
{{/extend}}
