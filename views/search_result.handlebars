<div class="container content">
	<div class="row">
		<div class="col-lg-12">
			<form method="post" id="searchform" class="sky-form">
				<header>Search venues</header>
				<fieldset>
					<div class="row">
						<section class="col col-6">
						<label class="label">Where(Zip or City, State)</label>
						<label class="input">
							<i class="icon-append fa fa-location-arrow"></i>
							<input type="text" name="where" id="where">
						</label>
						</section>
						<section class="col col-6">
						<label class="label">When do you need it?</label>
						<label class="input">
							<i class="icon-append fa fa-calendar"></i>
							<input type="text" name="start" id="start" placeholder="Date">
						</label>
						</section>
					</div>
					<div class="row">
						<section class="col col-12">
						<label class="label">Ameneties required</label>
						<div class="inline-group">
							<label class="checkbox"><input type="checkbox" name="checkbox-inline" checked><i></i>Coffee</label>
							<label class="checkbox"><input type="checkbox" name="checkbox-inline"><i></i>Allergy-free</label>
							<label class="checkbox"><input type="checkbox" name="checkbox-inline"><i></i>WiFi</label>
							<label class="checkbox"><input type="checkbox" name="checkbox-inline"><i></i>Bathroom</label>
						</div>
						</section>
					</div>
				</fieldset>
				<footer>
				<button type="submit" class="button">Submit</button>
				</footer>

			</form>         
		</div>  
	</div>  
	<div class="row">
		<div class="col-md-12">
			<div class="filter-results">
				{{> search_results}}
			</div>  
		</div>  
	</div>  
</div>  
