{{#extend "layoutPartial"}}
{{#section 'head'}}
{{#content "loggedIn"}}
	{{name}}
{{/content}}
{{/section}}
{{#content "mainbody"}}
<div class = "container">
	<form role="form" method="POST" class="sky-form" enctype="multipart/form-data">
		<header> Upload your images </header>
		<fieldset>
			<section>
			<div id="fileinput">
				<label for="file" class="input input-file">
					<div class="button btn-file">
						Browse <input type="file" id="photos" name="photos" multiple>
					</div>
				</label>
				<input type="text" class="form-control" readonly>
			</div>
			</section>
		</fieldset>
		<footer>
		<button type="submit" class="btn btn-default">Submit</button>
		</footer>
	</form>
</div>
{{/content}}
{{#content "scripts" mode="append"}}
<script src="/js/fileUpload.js"></script>
{{/content}}
{{/extend}}
